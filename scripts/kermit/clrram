#!/usr/local/bin/kermit +
      
#version 1.0


define close_connection {
	close
	echo
	echo "BSC not responding properly"
	EXIT 1
	}



set exit warning on

set modem type none
set line \%1
set speed 9600
#set speed 19200
#set speed 38400
set flow rts/cts
set carrier-watch off
set protocol xmodem
set duplex full
set output pacing 15
#set input echo on
set input echo off


# INIT
	output \13
	input 2 cmd>
		IF FAIL close_connection

#	clear input-buffer

	output clrram\13
	input 4 cmd>
		IF FAIL close_connection


    #echo
close
#echo
exit
