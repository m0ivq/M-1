#!/usr/local/bin/kermit +

# V0.1

define close_connection {
	close
	echo
	echo "BSC not responding properly"
	EXIT 1
	}



set exit warning on

set modem type none
set line \%1
set speed 9600
#set speed 19200
#set speed 38400
set flow rts/cts
set carrier-watch off
set protocol xmodem
set duplex full
set output pacing 15

set input echo off
#set input echo on

# INIT
	output nonsense\13
	input 2 cmd>
		IF FAIL close_connection



# stop test
	output stoptest\13
	input 2 cmd>
		IF FAIL close_connection
		
    #echo "running"
close
#echo
exit
