#!/usr/local/bin/kermit +

# V0.3

# $interface $step_mode;


define close_connection {
	close
	echo
	echo "BSC not responding properly"
	EXIT 1
	}



set exit warning on

set modem type none
set line \%1
set speed 9600
#set speed 19200
#set speed 38400
set flow rts/cts
set carrier-watch off
set protocol xmodem
set duplex full
set output pacing 30

set input echo off
#set input echo on

# INIT
	output nonsense\13
	input 2 cmd>
		IF FAIL close_connection


# set step mode
	output step\13
	input 2 {step_width: }
		if fail close_connection
	output \%2\13
	input 2 {cmd> }
		if fail close_connection



# start test
	output runtest\13
	input 2 destination_adr:
		IF FAIL close_connection
	output \%3\13
	input 2 cmd>
		IF FAIL close_connection
		
    #echo "running"
close
#echo
exit
